<Page x:ConnectionId='1'
    x:Class="MovieLibrary.Views.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MovieLibrary.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:m="using:MovieLibrary.ViewModels"
	 DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=FilmCollectionViewModel}"
	mc:Ignorable="d">

	<Grid 
		  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

		<StackPanel VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Width="500">
			<TextBox x:ConnectionId='2' x:Name="DirectorName"
					 
					 Header="Director"
					 Text="Besson"
			         PlaceholderText="Write Director and Press Enter"
			                                     
					 Margin="0 0 0 10"/>
			<TextBox x:ConnectionId='3' Header="Title"                                                                                 />
			<TextBox x:ConnectionId='4' Header="Director"                                                                                    />
			<TextBox x:ConnectionId='5' Header="Release Year"                                                                                       />
			<TextBox x:ConnectionId='6' Header="Duration"                                                                                   />
			<TextBox x:ConnectionId='7' Header="Poster"                                                                                 />

			<Image x:ConnectionId='8' Height="300" HorizontalAlignment="Center"
			       Stretch="Fill" VerticalAlignment="Top" 
			                                                                        
			       Width="350" />

			<ScrollViewer  Height="150">
				<ListView x:ConnectionId='9'
					                                             
			                                                                             >
					<ListView.ItemTemplate>
						<DataTemplate>
							<StackPanel Width="350"
							  Height="100"
										Margin="0 15 0 15">
								<TextBlock Text="{Binding Title, Mode=OneWay}"/>
								<TextBlock Text="{Binding Duration, Mode=OneWay}"/>
								<TextBlock Text="{Binding Director, Mode=OneWay}"/>
								<TextBlock Text="{Binding ReleaseYear, Mode=OneWay}"/>
								<TextBlock Text="{Binding Poster, Mode=OneWay}"/>
							</StackPanel>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</ScrollViewer>
		</StackPanel>



	</Grid>
</Page>

